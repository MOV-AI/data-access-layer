{
    "$id": "callback.schema.json",
    "$version": "2.3",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Callback Schema",
    "definitions": {
    },

    "type": "object",
    "properties": {
        "Callback": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "Description": "allOf here will validate instance inside Document to every object in the array",
                    "allOf": [
                        {
                            "$ref": "common/base.schema.json"
                        },
                        {
                            "type": "object",
                            "Description": "all of the other fields (optional fields)",
                            "properties": {
                                "Code": {
                                    "type": "string"
                                },
                                "Message": {
                                    "type": "string"
                                },
                                "Py3Lib": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-zA-Z_]+$": {
                                            "type": "object",
                                            "properties": {
                                                "Class": {
                                                    "type": "string"
                                                },
                                                "Module": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": ["Class", "Module"]
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["Callback"],
    "additionalProperties": false
}