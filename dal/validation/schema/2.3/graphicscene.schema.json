{
    "$id": "graphicscene.schema.json",
    "$version": "2.3",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Layout Schema",
    "definitions": {
        "coordinate": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
        },
        "belongsObj": {
            "type": "object",
            "properties": {
                "index": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "position": {
            "type": "object",
            "properties": {
                "orientation": {
                    "type": "object",
                    "patternProperties": {
                        "^[xyzw]$": {
                            "type": "number"
                        }
                    }
                },
                "position": {
                    "type": "object",
                    "patternProperties": {
                        "^[xyz]$": {
                            "type": "number"
                        }
                    }
                }
            }
        },
        "memoryValueObj": {
            "type": "object",
            "properties": {
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/memoryValueObj"
                    }
                },
                "item": {
                    "type": "object",
                    "properties": {
                        "color": {
                            "type": "array"
                        },
                        "keyValueMap": {
                            "type": "object"
                        },
                        "localPath": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                }
                            }
                        },
                        "name": {
                            "type": "string"
                        },
                        "position": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        },
                        "quaternion": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        },
                        "splinePath": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                }
                            }
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "name": {
                    "type": "string"
                }
            }
        }
},

    "type": "object",
    "properties": {
        "GraphicScene": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "Description": "allOf here will validate instance inside Document to every object in the array",
                    "allOf": [
                        {
                            "$ref": "common/base.schema.json"
                        },
                        {
                            "type": "object",
                            "Description": "all of the other fields (optional fields)",
                            "properties": {
                                "AssetType": {
                                    "type": "object",
                                    "properties": {
                                        "BoxRegion": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "polygon": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "$ref": "#/definitions/coordinate"
                                                                            }
                                                                        }
                                                                    }
                                                                },
                                                                "Annotation": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "behaviour": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "Value": {
                                                                                    "type": "string"
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            },
                                                            "required": ["Value"]
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "GlobalRef": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "properties": {
                                                        "Globalref": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "$ref": "#/definitions/position"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "GraphItem": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "properties": {
                                                        "LogicGraph": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "directed": {
                                                                            "type": "boolean"
                                                                        },
                                                                        "graph": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "keyValueMap": {
                                                                                    "type": "object"
                                                                                }
                                                                            }
                                                                        },
                                                                        "links": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "object",
                                                                                "properties": {
                                                                                    "belongsSrc": {
                                                                                        "$ref": "#/definitions/belongsObj"
                                                                                    },
                                                                                    "belongsTrg": {
                                                                                        "$ref": "#/definitions/belongsObj"
                                                                                    },
                                                                                    "keyValueMap": {
                                                                                        "type": "object",
                                                                                        "properties": {
                                                                                            "behaviour": {
                                                                                                "type": "string"
                                                                                            }
                                                                                        }
                                                                                    },
                                                                                    "source": {
                                                                                        "type": "string"
                                                                                    },
                                                                                    "target": {
                                                                                        "type": "string"
                                                                                    },
                                                                                    "weight": {
                                                                                        "type": "integer"
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "KeyPoint": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "$ref": "#/definitions/position"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "Map": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_]+([.][a-zA-Z0-9]+)?$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "$ref": "#/definitions/position"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "memory": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "properties": {
                                                        "assets": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "object",
                                                                    "patternProperties": {
                                                                        "^[a-zA-Z0-9_]+[.]png$": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "image": {
                                                                                    "type": "string"
                                                                                },
                                                                                "name": {
                                                                                    "type": "string"
                                                                                },
                                                                                "origin": {
                                                                                    "type": "array",
                                                                                    "items": {
                                                                                        "type": "number"
                                                                                    },
                                                                                    "minItems": 3,
                                                                                    "maxItems": 3
                                                                                },
                                                                                "resolution": {
                                                                                    "type": "number"
                                                                                },
                                                                                "size": {
                                                                                    "type": "array",
                                                                                    "items": {
                                                                                        "type": "number"
                                                                                    }
                                                                                },
                                                                                "type": {
                                                                                    "type": "string"
                                                                                }
                                                                            }
                                                                        },
                                                                        "^[a-zA-Z0-9_]+$": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "id": {
                                                                                    "type": "string"
                                                                                },
                                                                                "name": {
                                                                                    "type": "string"
                                                                                },
                                                                                "robotTree": {
                                                                                    "allOf": [
                                                                                        {
                                                                                            "$ref": "#/definitions/position"
                                                                                        },
                                                                                        {
                                                                                            "type": "object",
                                                                                            "properties": {
                                                                                                "child": {
                                                                                                    "type": "array"
                                                                                                },
                                                                                                "name": {
                                                                                                    "type": "string"
                                                                                                }
                                                                                            }
                                                                                        }
                                                                                    ]
                                                                                },
                                                                                "type": {
                                                                                    "type": "string"
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        },
                                                        "tree": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "$ref": "#/definitions/memoryValueObj"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "Path": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "keypoints": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "number"
                                                                            }
                                                                        },
                                                                        "trajectory": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "type": "number"
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "PointCloud": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_.]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "$ref": "#/definitions/position"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "PolygonRegion": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "polygon": {
                                                                            "type": "array",
                                                                            "items": {
                                                                                "$ref": "#/definitions/coordinate"
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "Robot": {
                                            "type": "object",
                                            "properties": {
                                                "AssetName": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        "^[a-zA-Z0-9_]+$": {
                                                            "type": "object",
                                                            "properties": {
                                                                "Value": {
                                                                    "$ref": "#/definitions/position"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "required": ["AssetType"]
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["GraphicScene"],
    "additionalProperties": false
}
