{
    "$id": "base.schema.json",
    "$version": "2.3",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Base Schema which should be refrenced by another schemas",

    "type": "object",
    "properties": {
        "Info": {
            "type": "string"
        },
        "Label": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "LastUpdate": {
            "anyOf": [
                {
                    "properties": {
                        "date": {
                            "type": "string"
                        },
                        "user": {
                            "type": "string"
                        }
                    },
                    "type": "object",
                    "required": ["user", "date"]
                },
                {
                    "type": "string"
                }
            ]
        }  
    },
    "required": ["Label", "LastUpdate"]
}