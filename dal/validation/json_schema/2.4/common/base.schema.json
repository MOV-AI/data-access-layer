{
    "$id": "base.schema.json",
    "$version": "2.4",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Base Schema which should be refrenced by another schemas",
    "type": "object",
    "properties": {
        "Info": {
            "type": "string"
        },
        "Label": {
            "type": "string",
            "pattern": "^[a-zA-Z\\.0-9_-]+$"
        },
        "Description": {
            "$comment": "this field should be removed in future verisons and use Info instead",
            "type": "string"
        },
        "LastUpdate": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                }
            },
            "required": [
                "user",
                "date"
            ]
        },
        "InstallPath": {
            "type": "string"
        }
    },
    "required": [
        "Label"
    ]
}
