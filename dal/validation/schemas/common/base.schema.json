{
    "$id": "BaseSchema-0.1",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Base Schema which should be refrenced by another schemas",

    "type": "object",
    "properties": {
        "Info": {
            "type": "string"
        },
        "Label": {
            "type": "string"
        },
        "LastUpdate": {
            "properties": {
                "date": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                }
            },
            "type": "object",
            "required": ["user", "date"]
        }  
    },
    "required": ["Label", "LastUpdate"]
}